<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Forlife Vendas</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="vendas">
                <span class="oi oi-dollar" aria-hidden="true"></span> Vendas
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> collapseSubMenuClientes = !collapseSubMenuClientes">
                <span class="oi oi-person" aria-hidden="true"></span> Clientes
            </NavLink>
            @if (collapseSubMenuClientes)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="clientes">
                            <span class="oi oi-home" aria-hidden="true"></span> Buscar Clientes
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="cadastroCliente">
                            <span class="oi oi-home" aria-hidden="true"></span> Cadastrar Cliente
                        </NavLink>
                    </li>
                </ul>
            }
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> collapseSubMenuLocais = !collapseSubMenuLocais">
                <span class="oi oi-home" aria-hidden="true"></span> Locais
            </NavLink>
            @if (collapseSubMenuLocais)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="locais">
                            <span class="oi oi-home" aria-hidden="true"></span> Buscar Locais
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="cadastrolocal">
                            <span class="oi oi-home" aria-hidden="true"></span> Cadastrar Local
                        </NavLink>
                    </li>
                </ul>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseSubMenuLocais;
    private bool collapseSubMenuClientes;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
